{
  "name": "ProtoPI",
  "private": true,
  "workspaces": [
    "packages/dev-aids/*",
    "packages/extensions/*"
  ],
  "scripts": {
    "start": "yarn workspace @myorg/package1 start",
    "build": "yarn workspaces run build",
    "test": "yarn workspaces run test",
    "cleanup:yarn": "yarn cache clean",
    "cleanup:files": "find . -type d \\( -name 'node_modules*' -o -name '.vscode-test*' -o -name 'dist*' -o -name 'out*' -o -name 'dist_dev*' -o -name 'dist_prod*' \\) -exec rm -rf {} + && find . -type f \\( -name 'yarn [0-9]*.lock' -o -name '*.timestamp-*.mjs' \\) -exec rm -f {} + && echo -n > yarn.lock && echo 'Cleanup completed!'",
    "cleanup": "concurrently \"yarn cleanup:yarn\" \"yarn cleanup:files\" ",
    "empty:trash": "sudo rm -rf ~/.Trash/*",
    "wrkspc:ls": "yarn workspaces info | grep '\"location\"' | sed 's/.*: \\\"\\(.*\\)\\\",/\\1/'"
  },
  "resolutions": {
    "rimraf": "^5.0.7",
    "glob": "^10.4.2",
    "@apidevtools/json-schema-ref-parser": "^11.6.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "svelte-language-server": "^0.16.13",
    "typescript": "^4.0.0"
  }
}
